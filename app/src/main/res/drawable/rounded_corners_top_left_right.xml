<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with rounded corners for top-left and top-right corners -->
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="20dp" android:topRightRadius="20dp"/>
            <solid android:color="@android:color/transparent" /> <!-- Set the desired background color -->
        </shape>
    </item>
    <!-- Image shape without rounded corners -->
    <item android:top="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Set the desired background color for the image -->
        </shape>
    </item>
</layer-list>
